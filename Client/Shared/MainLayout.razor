@inherits LayoutComponentBase

<AuthorizeView>
    <NotAuthorized>
        @Body
    </NotAuthorized>

    <Authorizing>
        @Body
    </Authorizing>

    <Authorized>
        <Layout Id="layout">
            <AppNavBar />

            <Content Class="content">
                @Body
            </Content>

            <Footer Class="footer">EMP Portal &copy;2021 Created by IT NEEPCO</Footer>
        </Layout>
    </Authorized>
</AuthorizeView>

<style>
    .content {
        background: #fff;
        padding: 24px;
        margin: 24px 16px;
        min-height: 500px;
        flex-grow: 1
    }

    #layout {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .logo {
        width: 120px;
        height: 31px;
        background: rgba(255, 255, 255, 0.2);
        margin: 16px 24px 16px 0;
        float: left;
    }
    .footer {
        text-align: center;
        background: #fff;
    }
</style>